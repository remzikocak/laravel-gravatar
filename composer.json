{
    "name": "remzikocak/laravel-gravatar",
    "description": "Gravatar Generator for Laravel",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "gravatar"
    ],
    "authors": [
        {
            "name": "Remzi",
            "email": "kocak0068@gmail.com",
            "role": "Developer",
            "homepage": "https://www.github.com/remzikocak"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/config": "^6.18|^7.0|^8.0",
        "illuminate/support": "^6.18|^7.0|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "RKocak\\Gravatar\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RKocak\\Test\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "RKocak\\Gravatar\\GravatarServiceProvider"
            ],
            "aliases": {
                "Gravatar": "RKocak\\Gravatar\\Facades\\Gravatar"
            }
        }
    }
}
